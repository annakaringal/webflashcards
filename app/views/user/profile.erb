<h2>User profile</h2>

<a href="/users/<%=@user.user_name%>/edit">Edit Profile</a>

<a href="/users/logout">Logout</a>

<div class="decks">
  <h3>Decks:</h3>
<% deck = Deck.all %>
<% deck.each do |deck| %>
<p><%=deck.name%></p>
<%end%>
</div>


<div class="rounds">
  <h3>Rounds Played:</h3>
  <table cellspacing="10  ">
    <thead></thead>
      <% @user.rounds.each do |round| %>
        <tr>
          <td>
            <%=round.deck.name%>
          </td>
          <td>
            <%=round.created_at.asctime%>
          </td>
      <%end%>
        </tr>
  </table>
</div>


